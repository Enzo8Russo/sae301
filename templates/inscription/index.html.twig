{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block body %}
    </header>
    <div class="form-container">
        <div class="form-titre">
            <h1 class="form-titre_start" style="color:black">S'</h1>
            <h1 class="form-titre_end">INSCRIRE</h1>
        </div>
        <form id="registrationForm" method="post" action="{{ path('app_inscription') }}">
            <label class="form-label" for="username">Nom d'utilisateur :</label>
            <input class="form-input" type="text" id="username" name="username" required>

            <label class="form-label" for="email">Adresse e-mail :</label>
            <input class="form-input" type="email" id="email" name="email" required>

            <label class="form-label" for="password">Mot de passe :</label>
            <input class="form-input" type="password" id="password" name="password" required>

            <label class="form-label" for="confirmPassword">Confirmer le mot de passe :</label>
            <input class="form-input" type="password" id="confirmPassword" name="confirmPassword" required>

            <button class="form-submit" type="submit">S'INSCRIRE</button>
        </form>
    </div>

    <script src="{{ asset('js/script-inscription.js') }}"></script>
    </body>
    </html>
{% endblock %}