{% extends 'base.html.twig' %}

{% block title %}Devoir{% endblock %}
{% block body %}
    </header>
    <div style="display: flex; justify-content: center; align-items: center">
    <div id="panier" style="display: flex; justify-content: space-around; align-items: center; flex-wrap: wrap;"></div></div>

    <!-- Formulaire pour ajouter un nouvel article -->

    <div class="form-container">
        <div class="form-titre">
            <h1 class="form-titre_start" style="color:black; margin-right: 8px;">Ajouter</h1>
            <h1 class="form-titre_end">Un Devoir</h1>
        </div>
        <form id="addProductForm">
            <label class="form-label" for="productName">Titre du Devoir :</label>
            <input class="form-input" type="text" id="productName" name="productName" required>

            <label class="form-label" for="productPrice">Description :</label>
            <input class="form-input" type="text" id="productPrice" name="productPrice" required>

            <label class="form-label" for="productDate">Date :</label>
            <input class="form-input" type="date" id="productDate" name="productDate" required>

            <button class="form-submit" type="submit">Ajouter</button>
        </form>
    </div>


    <script src="{{ asset('js/script-devoir.js') }}"></script>
    </body>
    </html>
{% endblock %}