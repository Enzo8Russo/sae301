{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    </header>
    <div id="panier"></div>

    <!-- Formulaire pour ajouter un nouveau sujet -->
    <form id="addSujetForm">
        <label for="sujetTitre">Titre du sujet :</label>
        <input type="text" id="sujetTitre" required>

        <label for="sujetDescription">Description :</label>
        <textarea id="sujetDescription" rows="4" required></textarea>

        <label for="sujetReponse">Nombre de réponses :</label>
        <input type="number" id="sujetReponse" required>

        <label for="sujetPoster">Date de publication :</label>
        <input type="text" id="sujetPoster" required>

        <label for="sujetNom">Nom de l'auteur :</label>
        <input type="text" id="sujetNom" required>

        <label for="sujetAvatar">URL de l'avatar :</label>
        <input type="text" id="sujetAvatar" required>

        <!-- Ajoutez d'autres champs si nécessaire -->

        <button type="submit">Ajouter</button>
    </form>

    <script src="{{ asset('js/script-forum.js') }}"></script>
{% endblock %}
